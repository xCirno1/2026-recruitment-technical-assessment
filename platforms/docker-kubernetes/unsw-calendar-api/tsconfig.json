{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2024",
    "lib": ["ES2024"],
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
